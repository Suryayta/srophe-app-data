                <title xml:id="name1110-3" xml:lang="fr" source="#bib1110-1">Marie (texte)</title>
                <title xml:id="name1110-4" xml:lang="en" source="#bib1110-1" syriaca-tags="#syriaca-headword">Mary (text)</title>
                <idno type="URI">http://syriaca.org/work/1110</idno>
